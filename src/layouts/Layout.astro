---
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string; // Optional meta description
}

const { title, description = 'Unlock your body\'s potential.' } = Astro.props;

import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		{/* Basic Tailwind reset/base styles are applied automatically via the integration */}
	</head>
	<body class="bg-white text-gray-800 font-sans"> {/* Adjust default font/colors if needed */}
		<main>
			<slot /> {/* Page content will be injected here */}
		</main>
		<Footer />
	</body>
</html>