---
interface Props {
    text: string;
    href?: string; // Optional link
    target?: string; // e.g., '_blank'
    type?: 'button' | 'submit' | 'reset'; // Default to 'button' if no href
    variant?: 'primary' | 'secondary'; // Example variants
}

const { text, href, target, type = href ? undefined : 'button', variant = 'primary' } = Astro.props;

const baseClasses = "inline-block px-8 py-4 rounded-md text-lg font-semibold transition duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2";

// Define styles for different variants
const variantClasses = {
    primary: "bg-blue-600 text-white hover:bg-blue-700 focus:ring-blue-500", // Adjust colors
    secondary: "bg-gray-200 text-gray-800 hover:bg-gray-300 focus:ring-gray-400",
};

const classes = `${baseClasses} ${variantClasses[variant]}`;
---

{href ? (
  <a {href} {target} class={classes}>
    {text}
  </a>
) : (
  <button type={type} class={classes}>
    {text}
  </button>
)}